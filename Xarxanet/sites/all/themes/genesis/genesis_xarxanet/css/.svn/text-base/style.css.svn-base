/**
 * @file style.css
 *
 * Use this file to override the Genesis core modular styles 
 * (such as the HTML elements in typography.css), module CSS 
 * and other Drupal styles. Anything that doesn't fit logically
 * into page.css, nodes.css, blocks.css or comments.css can go here.
 */

/**********************************************************
 *                    Body
 **********************************************************/
:focus {outline:0}
body,ul,ol,p,table,form,h1,h2,h2,h3,h4,h5,h6 {
 padding:0;
 margin:0;
}
* {margin: 0;}
html{height:100%;overflow:-moz-scrollbars-vertical;overflow-y:scroll;}
body#genesis-1c {
    color: black;
}
/**********************************************************
 *                 HTML Elements
 **********************************************************/

h1, h2, h3{
    font-family:Georgia, "Times New Roman", Times, serif;
    font-size:19pt;
    line-height:1.3em;
    font-weight:normal;
    color:#333;
}

h2, h3{
    font-size:12pt;
    padding-bottom:5px;
    font-weight:bold;
}

h3{
    font-weight:normal;
}

p {
    font-size:10pt;
    color:#333;
    line-height:1.4em;
    padding-bottom:10px;
}

strong {}
em, dfn {}
dfn {}

sup, sub {}

del {}
ins {}

blockquote{
    font-family:Georgia, "Times New Roman", Times, serif;
    font-size:14pt;
    line-height:1.3em;
    font-weight:normal;
    color:#333;
    margin-top:10px;
    margin-bottom:10px;
    font-style:italic;
    padding:10px;
    border-color:#999;
    border-style:solid;
    border-width:1px;
    border-right:none;
    border-left:none;
}
cite {}
q {}

address {}

ul {}
ol {}
li {}

dl {}
dd {}
dt {}


abbr {}
acronym {}

pre, code, tt {}
p code {}
samp {}
kbd {}
var {}


/**********************************************************
 *                 Global Link Styles
 **********************************************************/
a {
  margin: 0; 
  padding: 0;
  outline: none;
  text-decoration:none;
}
a img {border:0;}

.columns-inner a:link {text-decoration:none;color:#B2290C;}
.columns-inner a:visited {text-decoration:none;color:#B2290C;}
.columns-inner a:active, a:focus {text-decoration:none;color:#B2290C;}
.columns-inner a:hover {text-decoration:underline;color:#B2290C;}
.columns-inner a.active  {}

/* Drupal sets this to black. */
li a.active {}

p a:link {text-decoration:underline; font-weight:bold; color: #F00;}
p a:visited {text-decoration:underline; font-weight:bold; color:#F00;}
p a:active {text-decoration:underline; font-weight:bold; color: #F00;}
p a:hover {text-decoration:underline; font-weight:bold; color:#0F0;}

img a:link {text-decoration:none;}
img a:visited {text-decoration:none;}
img a:active {text-decoration:none;}
img a:hover {text-decoration:none; background-color:transparent;}

/**********************************************************
 *                 Accessibility Classes
 **********************************************************/

/* Hide content without positioning issues. */
.invisible {
  height: 0;
  overflow: hidden;
}

/* Move content off screen where appropriate. */
.offscreen {
  position: absolute;
  left: -999em;
  top: auto;
  width: 1px;
  height: 1px;
  overflow: hidden;
}

/* Completely remove content for all users.
   DO NOT use this for Skip links, display:none 
   hides content from screen readers! */
.remove {
  display: none;
}


