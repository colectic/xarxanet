/**
 * @file comments.css
 * Basic styles for comments.
 */

/**********************************************************
 *                     Comments
 **********************************************************/
/* Comment wrapper */
#comments {
	float: right;
    margin-bottom: 15px;
    position: relative;
	width: 477px;
}
#comments-title , #comments  h2.box-title {
	margin-top: 20px;
	font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 12pt;
	background-color: #959FD6;
	color: white;
	font-weight: normal;
	line-height: 1.3em;
	text-align: left;
	letter-spacing: 0;
	padding: 5px;
	
}
#comments  h2.box-title {
	margin-bottom: 5px;
}
.comment {
	background-color: #FFFFFF;
}
.comment-inner {
	padding-bottom: 5px;
	padding-top: 5px;
	margin: 0;
}
.comment-content {
	border-color: #DFE2F3;
	border-style: solid;
	border-bottom-style: none;
	border-width: 10px;
	padding: 5px;
}
.comment-content p {
	padding: 0;
}
.comment-submitted {
	background-color: #DFE2F3;
	font-style: italic;
	color: #4550A5;
	padding: 10px;
	padding-bottom: 5px;
	padding-top: 15px;
}
.comment-submitted a{
	 color: #959FD6;
}
.comment .comment-links ul li a {
	font-family: Arial,Helvetica,sans-serif;
    font-size: 10pt;
    font-weight: bold;
	color: #FFFFFF;
	font-style: normal;
	background-color: #959FD6;
	display: inline;
    float: right;
	text-transform: uppercase;
	text-align: center;
	padding: 24px;
	padding-top: 6px;
	padding-bottom: 5px;
	margin-top: -26px;
}
.comment .comment-links a:hover {
	background-color: #4550A5;
	text-decoration: none;
}
#comments .form-item {
	margin-top: 0;
	padding-left: 5px;
}
#comments .form-item textarea{
	margin-left: 5px;
}
#comments .form-item label{
	display: inline;
	color: #333;
	font-weight: bold;
	float: left;
	clear: none;
	margin-top: 5px;
	padding: 5px;
	width: 115px;
	font-size: 8pt;
	line-height: 1.2em;
}
#comments #edit-captcha-response-wrapper label {
	padding-left: 0;
	width: auto;
}
#comments .form-item input {
	border-style: solid;
	border-width: 1px;
	border-color: #CCC;
	width: 328px;
	padding-right: 0px;
}

#comments input[type=submit]{
	background-color: #959FD6;
	border: none;
	color: white;
	float: left;
	margin-right: 10px;
	padding: 5px;
	text-transform: uppercase;
}
#comments #edit-preview {
	margin-left: 10px;
    margin-top: -55px;
}
#comments input[type=submit]:hover{
	background-color: #4550A5;
}
#comments .resizable-textarea {
	clear: both;
}
	
#comments #edit-mail-wrapper{
	margin-bottom: 20px;
}
#comments #edit-captcha-response {
	width: 40px;
}
#comments .box-content {
	background-color: #DFE2F3;
}
#comments span.form-required {
	width: 5px;
	height: 5px;
	position: relative;
	float: right;
	margin-top: 0px;
}

#comments .description {
	font-size: .9em;
	line-height: 1.667em;
	color: #333;
	position: absolute;
	margin-left: 5px;
	clear: both;
}
#comments .captcha .description {
	position: relative;
}
#comments #edit-captcha-response-wrapper  .description{
	margin-left: 0;
}
fieldset.captcha {
	padding-bottom: 40px;
}
#comments .tips {
	display: none;
}
ul.links li {
	padding: 0;
	margin: 0;
}
