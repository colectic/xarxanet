 /**
 * A configurable Drupal action. Subscribe the user to a newsletter
 *   hook = user: Subscribe this user to selected newsletter
 *
 *   Available context:
 *    $context['tid']     newsletter tid
 *    $context['name']   newsletter name
 *
 *   @see simplenews_subscribe_user_action_form()
 *   @see simplenews_subscribe_user_action_submit()
 */
function simplenews_save_newsletter_action(&$object, $context = array()) {
	$months = array('de gener', 'de febrer', 'de marÃ§', 'd\'abril', 'de maig', 'de juny', 'de juliol', 'd\'agost', 'de setembre', 'd\'octubre', 'de novembre', 'de desembre');

	//Check newsletter's tid
	$node = node_load($object);
	if ($node->simplenews['tid'] == $context['tid']){
		$params['context']['newsletter'] = taxonomy_get_term($node->simplenews['tid']);
		$params['context']['node'] = $node;
		$message = drupal_mail('simplenews', 'node', 'nomail@mail.no', 'en', $params, null, FALSE);
		$html = '<html><head><meta charset="UTF-8"></head><body>'.$message['body'].'</body></html>';
		$time = time();
		$year = date('Y', $time);
		$filename = 'newsletter'.$context['tid'].'_'.$node->title.'_'.$time.'.html';
		$handle = fopen(file_directory_path().'/'.$filename, 'w');
		fwrite($handle, $html);
		fclose($handle);
		
		//Open FTP connection and save file
		$ftp_server = $context['ftp_server'];
		$ftp_user = $context['ftp_user'];
		$ftp_psw = $context['ftp_pass'];
		$conn_id = ftp_connect($ftp_server);
		$login_result = ftp_login($conn_id, $ftp_user, $ftp_psw);
		ftp_chdir($conn_id, "documents");
		if (!@ftp_chdir($conn_id, $year)){
			ftp_mkdir($conn_id, $year);
			ftp_chdir($conn_id, $year);
		}
		ftp_put($conn_id, $filename, file_directory_path().'/'.$filename, FTP_BINARY);
		ftp_cdup($conn_id);
		ftp_put($conn_id, 'ultim_butlleti.html', file_directory_path().'/'.$filename, FTP_BINARY);
		unlink(file_directory_path().'/'.$filename);
		
		//Update the XML reference with the new file
		$localfile = file_directory_path().'/'.rand(100, 200).'_documents.xml';
		ftp_get($conn_id, $localfile, 'documents.xml', FTP_BINARY);
		$xml = simplexml_load_file($localfile);
		$find = false;
		foreach ($xml->children() as $xml_year){
			$value = (int)$xml_year->attributes()->value;
			if($value == $year){
				$find = true;
				break;
			}
		}
		if (!$find){
			$xml_year = $xml->addChild('year');
			$xml_year->addAttribute('value', $year);
		}	
		$xml_newsletter = $xml_year->addChild('newsletter');
		$xml_newsletter->addChild('number', $node->title);
		$xml_newsletter->addChild('file', $filename);
		$xml_newsletter->addChild('date', date('j', $time).' '.$months[date('n', $time)-1].' de '.date('Y', $time));
		$xml->asXML($localfile);
		ftp_put($conn_id, 'documents.xml', $localfile, FTP_BINARY);
		unlink($localfile);
	}
}

