#equiblock {
    display: none;
    position: fixed;
    top: 25px;
    right: 45px;
    color: #CCCCCC;
    padding: 5px;
    z-index: 1000;
}

#equiblock li {
    display: block;
    padding: 5px 10px 4px;
    float: none;
    line-height: 2em;
}

#equiblock a {
    color: #FFFFFF;
    font-weight: bold;
    text-decoration: none;
}

.equiblock-element {
    display: block;
    float: left;
}

.equiblock-content {
    background: url("images/palette.png") no-repeat scroll 50% 0 transparent;
    left: 50%;
    margin: 0 0 0 -130px;
    padding: 35px 10px 25px;
    position: absolute;
    width: 240px;
}

#equiblock .form-item {
    background: none repeat scroll 0 0 transparent;
    border: 0 none;
    margin: 0 0 10px;
    padding: 0;
}

#equiblock .form-item label {
    color: #999999;
    font-size: 10px;
    margin: 0;
    padding: 0;
    text-transform: uppercase;
    display: block;
}

#equiblock-login-form {
    text-align: left;
}

#equiblock-login-form input {
    width: 95%;
    margin-left: 0px;
}

#equiblock-login-form input[type=submit] {
    text-align: center;
}

#equiblock-user-options {
    background: url("images/palette.png") no-repeat scroll 50% 0 transparent;
    left: 50%;
    margin: 0 0 0 -130px;
    padding: 25px 10px 10px;
    position: absolute;
    width: 200px;
}

.equiblock-element-title {
    background-color: #222222;
    background-image: url("images/sprite.png");
    background-position: -370px -234px;
    background-repeat: no-repeat;
    border-radius: 3px 3px 3px 3px;
    color: #FFFFFF;
    cursor: pointer;
    display: block;
    font-size: 11px;
    height: 30px;
    line-height: 30px;
    margin-right: 5px;
    padding: 3px 5px 15px 30px;
    width: auto;
}