 */

function tothomweb_agenda_init() {
	drupal_add_js(array('tothomweb_agenda' => array('url' => url('ajax/agenda'))), 'setting');
	drupal_add_js(drupal_get_path('module', 'tothomweb_agenda') . '/js/tothomweb_agenda.js');
