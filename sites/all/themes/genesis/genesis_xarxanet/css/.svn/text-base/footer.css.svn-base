#Footer {
	position:relative;
	width:100%;
	height:150px;
	background-color:#b7cbd1;
	float:left;
	margin:0 auto;
	background-image:url(../images/background-footer.gif);
	background-repeat:repeat-x;
	background-position:top;
	margin-top:15px;
}
#Footer-Contenido{
	position:relative;
	height:auto;
	width:965px;
	margin:0 auto;
}
#Footer-Projecte, #Footer-Xarxes{
	position:relative;
	height:auto;
	width:auto;
	float:right;
	margin-top:5px;
}
#Footer-Projecte h4, #Footer-Xarxes h4{
	color:#FFF;
	font-family:Arial, Helvetica, sans-serif;
	font-size:10pt;
	font-weight:bold;
}
#Footer-Projecte ul, #Footer-Xarxes ul{
	list-style-type:none;
	list-style-position:inside;
}
#Footer-Projecte li, #Footer-Xarxes li{
	float:left;
	margin:15px 0px 15px 0px;
}
#Footer-Xarxes{
	float:left;
}