/**
 * @file comments.css
 * Basic styles for comments.
 */

/**********************************************************
 *                     Comments
 **********************************************************/
/* Comment wrapper */
#comments {
	float: right;
    height: auto;
    margin-bottom: 15px;
    position: relative;
	width: 477px;
	position: relative;
}

.comment {
	border-color: #DFE2F3;
}

span.respon{
	font-family:Arial, Helvetica;
	background-color: #959FD6;
    float: right;

	display: inline;
	text-transform: uppercase;
	text-align: center;
	width: auto;
	height: auto;
	padding: 24px;
	padding-top: 6px;
	padding-bottom: 5px;
	margin-right: -10px;
	margin-top: 8px;
}

.comment-submitted .respon ul li a{
	font-weight: bold;
	text-decoration: none;
	font-style: normal;
	color: #FFFFFF;
}
.comment-submitted  .respon ul li a:hover {
	font-weight: bold;
	text-decoration: none;
	font-style: normal;
	color: #FFFFFF;
	background-color: #4550A5;
}
.comment-submitted {
	border-top-style: solid;
	font-style: italic;
	border-top-width: 10px;
	color: #4550A5;
	background-color: #DFE2F3;
    height: auto;
	padding-bottom: 20px;
}
.comment-submitted :hover {

}
#comments-title {
	font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 12pt;
	background-color: #959FD6;
	padding: 5px;
	color: white;
	font-weight: normal;
	line-height: 1.3em;
	margin: 0;
	text-align: left;
	letter-spacing: 0;
}
.form-item span.field-prefix {
	margin-top: -12px;
	margin-left: -108px;
	position: relative;
}
div.contingut {
	padding-top: 10px;
}
